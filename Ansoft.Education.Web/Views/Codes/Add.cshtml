@*@model Ansoft.Education.Web.Models.CodeModels*@

@{
    ViewBag.Title = "Add Code Source";
}
<h2>Code Edtior
</h2>
<script src="@Url.Content("~/Source/nicEditor/nicEdit.js")" type="text/javascript"></script>
@using (Html.BeginForm("AddOperation", "Codes", FormMethod.Post))
{
    <Label id="lblModule" class="code-form-label">Module</Label>
@Html.DropDownList("Module", (List<SelectListItem>)ViewBag.selItems, new { @class = "code-form-text" })

    
    
<Label id="lblName" class="code-form-label">Name</Label>
@Html.TextBox("Name", "", new { @class = "code-form-text", placeholder = "Example.py" });
@*@Html.TextBoxFor(c => c.Name, new { @class = "code-form-text", placeholder = "Example.py" });*@
<Label id="lblAuthor" class="code-form-label">Author</Label>
@Html.TextBox("Author", "", new { @class = "code-form-text", placeholder = "Micheal" });



<Label id="lblDescript" class="code-form-label">Descript</Label>
@Html.TextArea("Descript", "", new { @class = "code-form-textarea", placeholder = "Write something..." });


<Label id="lblCode" class="code-form-label">Code</Label>
@Html.TextArea("CodeEditor", "", new { @class = "code-form-textarea-Code" });
<input type="submit" id="logOnBtn" value="登陆" />
}

<script type="text/javascript">
    $(document).ready(function () {
        bkLib.onDomLoaded(function() {
            new nicEditor({ fullPanel: true
            }).panelInstance('CodeEditor'); 
        });
    });
</script>
