@{
    ViewBag.Title = "Js";
}

<style type="text/css"> 
.drag-div{position:absolute;width:200px;height:300px;cursor:move;border:1px solid #888;background:#000;}
#drag1{top:300px;left:500px;}
#drag2{top:300px;left:700px;}
#temp{opacity:0.3;filter:alpha(opacity=30);}
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnSync").click(function () {
            var rs = $.ajax({ url: "../../Source/Data/SyncData.txt", async: false });
            if (rs == null || rs == "") {
                return;
            }
            $("#syncContent").html(rs.responseText);
        });
    })
  
</script>

<h2>Simple Ajax</h2>
<hr />
<p id="syncContent">../../Source/Data/SyncData.txt</p>
<a id="btnSync" class="button-normal">Sync From Text File</a>

